<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ArcSeekBar">
        <attr name="bgColor" format="color" />
        <attr name="progressColor" format="color" />
        <attr name="strokeWide" format="integer" />
        <attr name="fillType" format="enum">
            <enum name="absolute" value="1" />
            <enum name="relative" value="2" />
        </attr>
        <attr name="gravity" format="enum">
            <enum name="right" value="1"/>
            <enum name="bottom" value="2"/>
        </attr>
        <attr name="sweepAngle" format="float"/>
        <attr name="max" format="integer"/>
        <attr name="progress" format="integer"/>
        <attr name="progress_thumb" format="reference"/>
    </declare-styleable>

    <declare-styleable name="CircleSeekBar">
        <attr name="android_thumb" format="reference"/>
        <attr name="progress_width" format="reference"/>
        <attr name="progress_background" format="reference"/>
        <attr name="progress_front" format="reference"/>
        <attr name="progress_max" format="reference"/>
        <attr name="show_progress_text" format="reference"/>
        <attr name="progress_text_stroke_width" format="reference"/>
        <attr name="progress_text_color" format="reference"/>
        <attr name="progress_text_size" format="reference"/>
    </declare-styleable>
</resources>